SOURCES=$(wildcard *.cc)
BIN=$(SOURCES:.cc)
OBJ=$(SOURCES:.cc=.o)
CC=g++
CFLAGS=-g -Wall
LDFLAGS=`sdl2-config --cflags --libs` -lSDL2 -lSDL2_mixer -lSDL2_image -lSDL2_ttf
LIBS=-lpthread 

all: $(BIN)

%.o: %.c Makefile
	$(CC) $(CFLAGS) -c -o $@ $<

$(BIN): %: %.o
	$(CC) -c $(LDFLAGS)  -o $@ $^ $(LIBS)
main.o: main.cc
 $(GCC) $(CFLAGS) main.cc

Socket.o Socket.h Socket.cc
 $(GCC) $(CFLAGS) Socket.cc
.PHONY: clean

clean:
	-rm $(BIN) $(OBJ)